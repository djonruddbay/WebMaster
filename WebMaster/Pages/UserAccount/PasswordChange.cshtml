@page
@model PasswordChangeModel

@{
    ViewData["Title"] = "Change My Password";
}

<h2 style="text-decoration:underline">@ViewData["Title"]</h2>

<div class="row container">
    <div class="col-xs-12 col-sm-6 col-md-5 col-lg-4 UserWindow">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

            <div class="form-group has-feedback RowTop Password">
                <label asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" id="OldPassword" type="password"
                       class="form-control input-sm UserInput" 
                        spellcheck="false" autocomplete="off"/>
                <i class="form-control-clear glyphicon glyphicon-eye-open form-control-feedback"></i>
            </div>

            <div class="form-group has-feedback Password">
                <label asp-for="Input.Password"></label>
                <label id="pwStatus" class="pull-right" style="color:red"></label>
                <input asp-for="Input.Password" id="Password" type="password"
                       class="form-control input-sm UserInput"
                       spellcheck="false" autocomplete="off" />
                <i class="form-control-clear glyphicon glyphicon-eye-open form-control-feedback"></i>
            </div>

            @await Html.PartialAsync("./_PasswordRequirements")

            <div class="form-group has-feedback Password">
                <label asp-for="Input.ConfirmPassword"></label>
                <label id="pwConfirmStatus" class="pull-right" style="color:red"></label>
                <input asp-for="Input.ConfirmPassword" id="ConfirmPassword"
                       class="form-control input-sm UserInput"
                       spellcheck="false" autocomplete="off" />
                <i class="form-control-clear glyphicon glyphicon-eye-open form-control-feedback"></i>
            </div>

            <hr />

            <div class="form-group RowBottom">
                <div asp-validation-summary="All" class="text-danger" style="margin-top:10px"></div>
                <button type="submit" class="btn btn-sm btn-success">
                    Save Changes&nbsp;<span class="fa fa-save"></span>
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/js/Password.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
